.container{
	width: 100%;
	height: auto;
	display: flex;
	position: absolute;
	flex-direction: column;
	background-color: rgb(235, 198, 142);
}
.title{
	display: flex;
	position: relative;
	width: 100%;
	justify-content: center;
}
.record{
	display: flex;
	position: relative;
	width: 100%;
	justify-content: center;
	flex-direction: column;
}
.form-item {
  margin-bottom: 20px;
}
label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}
input, textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}
button {
  width: 100%;
  padding: 10px;
  background-color: #e0ac4b;
  color: rgb(201, 72, 72);
  border: none;
  border-radius: 5px;
}
image {
  width: 100%;
  height: auto;
  margin-top: 10px;
}
.trend{
	width: 100%;
	height: auto;
	display: flex;
	position: relative;
	flex-direction: column;
}
ec-canvas {
	width: 100%;
	height: 100%;
}
.table {
  width: 100%;
  border-collapse: collapse;
}
.form-item {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
	padding: 15rpx 40rpx;
	flex-wrap: wrap;
}
.form-item-hd {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.form-item-bd {
  flex: 1;
  height: 60rpx;
}
.table-header {
  background-color: #f0f0f0;
  border-bottom: 1px solid #ccc;
  display: flex;
  padding: 8px;
}

.header-item {
  flex: 1;
  text-align: center;
  font-weight: bold;
}

.table-row {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 8px;
}

.table-item {
  flex: 1;
  text-align: center;
}
.medicine{
	display: flex;
	position: relative;
	width: 100%;
	height: auto;
	flex-direction: column;
}
.predict{
	display: flex;
	position: relative;
	flex-direction:column;
	width: 100%;height: auto;
}
.select{
	top: -50rpx;
	display: flex;
	position: relative;
	flex-wrap: wrap;
	width: 100%;
}
label{
	font-size: small;
}
.consult{
	display: flex;
	position: relative;
	width: 100%;
	flex-direction: column;
}
input, .input {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding: 0 15rpx;
}

.input-placeholder {
  color: #808080;
}

.edit-btn {
  margin-top: 8rpx;
}

.hidden {
  display: none;
}
.textarea {
  width: 100%;
  height: 100px;
  border: 1px solid #ccc;
  padding: 10px;
  font-size: 16px;
}

.submit-btn {
  width: 100%;
  padding: 10px;
  background-color: #007AFF;
  color: white;
  text-align: center;
  font-size: 16px;
  border: none;
  margin-top: 10px;
}

.response {
  margin-top: 20px;
}

.response-title {
  font-weight: bold;
}

.response-content {
  margin-top: 10px;
  font-size: 16px;
}